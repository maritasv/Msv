<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">HINVenture</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <AuthorizeView Roles="freelancer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="freelancersorders">
                    <span class="oi oi-plus" aria-hidden="true"></span> Freelansers projects
                </NavLink>
            </li>
            
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="main">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Main
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Roles="customer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="CustomerOrder">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Your orders
                </NavLink>
            </li>

            <li class="nav-item px-3">
                <NavLink class="nav-link" href="freelancers">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Freelancers
                </NavLink>
            </li>
        </AuthorizeView>
       
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
